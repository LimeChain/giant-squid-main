{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    // "baseUrl": "./src",
    "paths": {
      "@gs/action": [
        "./src/action",
      ],
      "@gs/model": [
        "./src/model",
      ],
      "@gs/util/*": [
        "./src/utils/*",
      ],
      "@metadata/*": [
        "./src/metadata/*"
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "templates"
  ],
}